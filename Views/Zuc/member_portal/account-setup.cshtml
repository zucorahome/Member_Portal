<section class="member-setup-page zuc-service-form">
	<h2 class="sr-only">Smarter living memeber account set-up form.</h2>
	<section class="inner-width">
		<div class="page-smarterLiving-logo center">
			<img src="/Images/Zuc/images/homepage/SmarterLivingLogo_small.png" alt="Smarter living logo with house roof icon.">
		</div>
		<div class="memberProfile-title"><h3>Welcome to Smarter Living Member account set up.</h3></div>
		<!-- Form starts -->
		<div class="zuc-forms-container flex flex-column --service">
        <form id="memberPortal-login" class="flex flex-column">
          <div class="zuc-form-row">
            <div class="zuc-form-group zuc-form-50">
              <div class="zuc-input-name"><strong>First name *</strong></div>
              <label class="u-screenreader" for="field-first-name">First name</label>
              <input type="text" required="" name="firstname" placeholder="First name" id="field-first-name">
            </div>
            <div class="zuc-form-group zuc-form-50">
                <div class="zuc-input-name"><strong>Last name *</strong></div>
                <label class="u-screenreader" for="field-last-name">Last name</label>
                <input type="text" required="" name="lastname" placeholder="Last name" id="field-last-name">
            </div>
          </div>
 
          <div class="zuc-form-row">
            <div class="zuc-form-group zuc-form-50">
              <div class="zuc-input-name"><strong>Preferred phone number *</strong></div>
              <label class="u-screenreader" for="field-current-phone">Current phone number</label>
              <input type="tel" required="" name="current-phone" placeholder="Phone number where we can reach you" id="field-current-phone">
            </div>
            <div class="zuc-form-group zuc-form-50">
              <div class="zuc-input-name"><strong>Alternate Phone number</strong></div>
              <label class="u-screenreader" for="field-order-phone">Alternate phone number</label>
              <input type="tel" name="order-phone" placeholder="Alternate phone number" id="field-order-phone">
            </div>
          </div>
           <div class="zuc-form-row">
            <div class="zuc-form-group zuc-form-50">
              <div class="zuc-input-name"><strong>Email address *</strong></div>
              <label class="u-screenreader" for="field-email">Email address</label>
              <input type="email" required="" name="email" placeholder="Email address" id="field-email">
            </div>
             <div class="zuc-form-group zuc-form-50">
              <div class="zuc-input-name"><strong>Alternate email address </strong></div>
              <label class="u-screenreader" for="field-email">Alternate email address</label>
              <input type="email" required="" name="alternate-email" placeholder="Alternate email address" id="alternate-field-email">
            </div>
          </div>
          <!-- Checkmarks -->
          <div class="zuc-form-row">
          	<div class="memberForm-checkmark">
          		<label for="contact-checkbox">Preferred method of contact</label>
          		<input type="checkbox" name="phone" value="phone">Phone
          		<input type="checkbox" name="text" value="text">Text
				<input type="checkbox" name="email" value="email">Email          		
          	</div>
          </div>

          <!-- Radio buttons -->
          <div class="zuc-form-row">
				<div class="zuc-radio-group memeberForm-radioButtons">
			             <input type="radio" id ="" name="promotionalEmails-option" value="promotionalEmails-yes">I would like to receive promotional emails about Smarter Living by Zucora Home.
			             <br>
			             <input type="radio" id="" name="promotionalEmails-option" value="promotionalEmails-no">I do not want to receive promotional emails about Smarter Living by Zucora Home.
             	</div>
            </div>

          <div class="zuc-form-row">
            <div class="zuc-form-group zuc-form-50">
              <div class="zuc-input-name"><strong>Password</strong></div>
              <label class="u-screenreader" for="password">Password</label>
              <input type="text" name="new-member-password" placeholder="Password" id="password">
            </div>
            <div class="zuc-form-group zuc-form-50">
              <div class="zuc-input-name"><strong>Confirm password *</strong></div>
              <label class="u-screenreader" for="confirm-password">Confirm Passowrd</label>
              <input type="text" name="new-member-confirm-password" placeholder="Confirm Passowrd" id="confirm-passowrd">
            </div>
          </div>
         
          <div class="zuc-form-row zuc-form-action">
            <div class="zuc-form-group zuc-form-33">
               <button class="zuc-btn zuc-btn-secondary zuc-btn-xpad u-soft-shadow" type="submit"><strong><span>SUBMIT</span></strong></button>
            </div>
            <div class="zuc-form-group zuc-form-33">
              <button class="zuc-btn zuc-btn-secondary zuc-btn-xpad u-soft-shadow" type="submit"><strong><span>Cancel</span></strong></button>
            </div>
            <div class="zuc-form-group zuc-form-33">
              <a href="#/">reCaptcha</a>
            </div>
          </div>
        </form>
      </div>
      <!-- Form ends -->
	</section> <!--Inner section ends-->
</section>
